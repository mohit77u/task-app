
<section class="lg:w-9/12 md:w-10/12 sm:w-11/12 mx-auto py-16 px-2">

    <% if(flash && flash.success.length > 0){ %>
        <div class="flex p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
            <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
            <div>
            <span class="font-medium"><%= flash.success %></span>
            </div>
        </div>
    <% } %>

    <% if(flash && flash.error.length > 0){ %>
        <div class="flex p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
            <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
            <div>
            <span class="font-medium"><%= flash.error %></span>
            </div>
        </div>
    <% } %>

    <div class="flex justify-between items-center mb-5">
        <h2 class="text-slate-900 text-2xl font-bold">All Tasks</h2>
        <a href="/create-task" role="button" class="bg-green-500 text-white rounded px-5 py-2 font-semibold tracking-wide">Add New</a>
    </div>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Title
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Description
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Category
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Due Date
                    </th>
                    <th scope="col" class="px-6 py-3 text-center">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                <!-- loop of tasks -->
                <% for(let i of tasks) {%>
                    <tr class="bg-white border-b hover:bg-gray-50">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                            <%= i.title %>
                        </th>
                        <td class="px-6 py-4">
                            <p class="text-ellipsis truncate md:max-w-[400px] max-w-[250px]"><%= i.description %></p>
                        </td>
                        <td class="px-6 py-4 capitalize">
                            <%= i.category %>
                        </td>
                        <td class="px-6 py-4">
                            <%= i.due_date %>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <a href="/edit/<%= i._id %>" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                            <a href="/delete/<%= i._id %>" class="font-medium text-red-600 dark:text-red-500 hover:underline ml-4">Delete</a>
                        </td>
                    </tr>
                <%} %>
            </tbody>
        </table>
    </div>
</section>
